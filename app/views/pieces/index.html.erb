<p id="notice"><%= notice %></p>

<h1>Pieces</h1>
<h2><%=@avg%></h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%=piece.name %></td>
        <td><%=piece.artist %></td>
        <td><%=piece.price %></td>
        <td><%=piece.birthdate%></td>
        <td><%=piece.deathdate %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
